
@model AccountViewModel
@{
    ViewData["Title"] = "Add";
    var claims = ViewBag.Claims as List<System.Security.Claims.Claim>;
}

<h1>添加或编辑用户</h1>
<form role="form" method="post" asp-action="Add">
    <input type="hidden" name="Type" value="@ViewBag.Type" />
    @if (ViewBag.Type == "Edit")
    {
        /*<input type="hidden" asp-for="Id" />*/
        <hr />
        <h2>用户Claims</h2>
        <ul>
            @foreach (var c in claims)
            {
                <li>@c.Value</li>
            }
        </ul>
        <a asp-action="AddClaimsToUser" asp-route-userId="@Model.Id" class="btn btn-primary">为用户添加Claims</a>
    }
    <div class="form-group row">
        <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text" asp-for="UserName" class="form-control" placeholder="请输入账号" />
        </div>
        <span asp-validation-for="UserName"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Password" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text" asp-for="Password" class="form-control" placeholder="请输入密码" />
        </div>
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text" asp-for="Email" class="form-control" placeholder="请输入邮箱" />
        </div>
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group row">
        <label asp-for="NickName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text" asp-for="NickName" class="form-control" placeholder="请输入昵称" />
        </div>
        <span asp-validation-for="NickName"></span>
    </div>

    <button type="submit" class="btn-primary">提交</button>
</form>