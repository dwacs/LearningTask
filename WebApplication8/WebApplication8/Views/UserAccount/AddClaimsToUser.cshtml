
@model AccountClaimsViewModel
@{
    ViewData["Title"] = "AddClaimsToUser";
}
<h1>给用户添加Claims</h1>
<form role="form" asp-action="AddClaimsToUser" method="post">
    <input asp-for="UserId" type="hidden" />
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Claims</label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="UserClaim" asp-items="@(new SelectList(Model.Claims))">
                <option>请选择</option>
            </select>
        </div>
    </div>
    <div asp-validation-summary="ModelOnly"></div>
    <button type="submit" class="btn btn-primary">提交</button>

</form>