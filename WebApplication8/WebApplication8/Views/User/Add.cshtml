@using WebApplication8.Models
@model UserInsertViewModel
@{
    ViewData["Title"] = "Add";
}

<form role="form" method="post" asp-action="Add">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Id"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="请输入Id" asp-for="Id" />
        </div>
        <span asp-validation-for="Id"></span>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="UserName"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="请输入用户名" asp-for="UserName" />
        </div>
        <span asp-validation-for="UserName"></span>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Password"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="请输入密码" asp-for="Password" />
        </div>
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="RegDate"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="请输入注册日" asp-for="RegDate" />
        </div>
        <span asp-validation-for="RegDate"></span>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="AccessAuthority"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="请输入权限等级" asp-for="AccessAuthority" />
        </div>
        <span asp-validation-for="AccessAuthority"></span>
    </div>

    <div class="row">
        <div class="col-md-2 offset-md-2">
            <button type="submit" class="btn btn-primary">Add</button>
        </div>
    </div>
</form>